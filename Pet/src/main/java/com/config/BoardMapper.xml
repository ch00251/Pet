<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="BoardMapper">
	<select id="boardList" resultType="BoardDTO">
		select num,userid,title,regdate,viewCount from board order by num desc
	</select>
	<select id="boardRetrieve" resultType="BoardDTO" parameterType="int">
		select num,userid, title,content, regdate,viewCount from board
		where num=#{num}
	</select>
	<update id="addViewCount" parameterType="int">
		update board set viewCount=viewCount+1 where num=#{num}
	</update>
	<insert id="boardInsert" parameterType="BoardDTO">
		insert into board(num,userid,cateAni,title,content,regdate,viewCount)
		values(board_seq.nextval,#{userid},#{cateAni},#{title},#{content},sysdate,0)
	</insert>
	<update id="boardUpdate" parameterType="BoardDTO">
		update board set
		title=#{title}, content=#{content} where num=#{num}
	</update>
	<delete id="boardDelete" parameterType="int">
		delete from board where num=#{num}
	</delete>
</mapper>